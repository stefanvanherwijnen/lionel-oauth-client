{
  "name": "lionel-oauth-client",
  "description": "oAuth client with OpenID Connect support for browser based applications.",
  "author": "Ã„ventyret Sweden AB",
  "version": "0.6.0",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/Aventyret/lionel-oauth-client#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aventyret/lionel-oauth-client.git"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "tag": "./tag.sh",
    "lint": "eslint --ext .ts src/**/*.ts test/**/*.ts",
    "husky": "husky install",
    "pre-commit": "lint-staged",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "serve:e2e": "serve ./"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/lionel-oauth-client.js"
    }
  },
  "browser": "dist/lionel-oauth-client.umd.js",
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "pinst": "^3.0.0",
    "prettier": "^3.5.3",
    "serve": "^14.2.4",
    "ts-jest": "^29.3.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-banner": "^0.8.1",
    "vite-plugin-dts": "^4.5.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.1.3",
    "vue": "^3.5.13"
  },
  "dependencies": {
    "oauth-pkce": "^0.0.7"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.40.2"
  },
  "overrides": {
    "vite": {
      "rollup": "@rollup/wasm-node"
    }
  },
  "files": [
    "dist"
  ]
}
